<div class="main-body">
    <div class="table-section">
        <table id="ad-tables">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th colspan="3">PostedBy</th>
                    <th>Picture</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            
                {{#each ads}}
                 <tr>
                     <td>{{this.id}}</td>
                     <td>{{this.name}}</td>
                     <td>{{this.title}}</td>
                     <td>{{this.description}}</td>
                     <td>{{this.userid}}</td>
                     <td>{{this.username}}</td>
                     <td>{{this.useremail}}</td>
                     <td>{{this.picture}}</td>
                     <td><button class="btn-danger">Delete</button></td>
                 </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>