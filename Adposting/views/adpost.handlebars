<div class="main-body">
    <div class="form-section">
        <form action="/ad/postadv" method="post" enctype="multipart/form-data">
         <div class="form-group">
             <input type="text" name="title" placeholder="Title" id="" class="form-control">
         </div>
         <div class="form-group">
             <select name="category" class="form-control" id="">
                 <option value="0">--Select </option>
                 <option value="1"> Commercial </option>
                 <option value="2"> Financial </option>
                 <option value="3"> Personal </option>
                 <option value="4"> Shopping </option>
                 <option value="5"> Jobs </option>
                 <option value="6"> Scheme </option>
                 <option value="7"> University </option>
                 {{#each categories}}
                 <option value="{{this.id}}">{{this.name}}</option>
                 {{/each}}
             </select>
         </div>
         <div class="form-group">
             <input type="text" name="Postedby" class="form-control" placeholder="Postedby" id="">
         </div>
         <div class="form-group">
             <input type="file" name="picture" id="">
         </div>
         <div class="form-group">
             <textarea name="description" id="" placeholder="Description" class="form-control" cols="30" rows="10">

             </textarea>
         </div>
         <div class="form-group">
             <button class="btn-primary">Post Ad</button>
         </div>
        </form>
           <form action="/postadv" method="get">
        <div class="form-group">
             <button class="btn-primary">Post Ad</button>
         </div>
        </form>
        <form action="/postadvuser" method="get">
        <div class="form-group">
             <button class="btn-primary">Post Ad</button>
         </div>
        </form>
        
     
    </div>
</div>